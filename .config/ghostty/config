# General appearance settings
cursor-color = #89DCEB
cursor-text = #000000

# Font settings
font-family = "Monaspace Neon Var"
font-feature = "calt,cv02,cv10,cv11,cv31,ss01,ss02,ss03,ss04,ss05,ss06,ss07,ss08,ss09,ss10,dlig"
font-size = 16

# Theme
theme = "Catppuccin Mocha"

# URL handling while running tmux
link-url = true
mouse-shift-capture = never

# Keybindings
keybind = ctrl+super+h=goto_split:left
keybind = ctrl+super+j=goto_split:down
keybind = ctrl+super+k=goto_split:up
keybind = ctrl+super+l=goto_split:right

keybind = alt+super+h=resize_split:left,10
keybind = alt+super+j=resize_split:down,10
keybind = alt+super+k=resize_split:up,10
keybind = alt+super+l=resize_split:right,10

# Misc
macos-option-as-alt = true
clipboard-write = allow
