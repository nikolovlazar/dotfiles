{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "anthropic/claude-opus-4-5",
  "autoupdate": true,
  "mcp": {
    "sentry": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote@latest",
        "https://mcp.sentry.dev/mcp"
      ]
    },
    "spotlight": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "--prefer-online",
        "@spotlightjs/spotlight@latest",
        "mcp"
      ]
    },
    "shadcn": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "shadcn@latest", "mcp"]
    },
    "neon": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.neon.tech/mcp"
    }
  }
}
